<!-- Flex container for sidebar and main content -->
    <div class="flex min-h-screen bg-gray-300">
        <!-- Sidebar -->
        <aside>
            {{> sidebar}}
        </aside>

        <!-- Centered Content Wrapper -->
        <div class="flex flex-1 items-center justify-center">
            <!-- Plants Currently Being Grown -->
            <div class="card bg-base-100 shadow-lg p-6 w-full max-w-3xl">
                <h2 class="card-title text-xl mb-4">Plants Currently Being Grown</h2>
                <ul class="space-y-4">
                    {{#each userPlants}}
                    <li class="flex items-center space-x-4">
                        <img src="{{this.image_url}}" alt="{{this.name}}" class="w-12 h-12 rounded-md object-cover">
                        <div>
                            <p><strong>Plant Name:</strong> {{this.common_name}}</p>
                            <p><strong>Scientific Name:</strong> {{this.scientific_name}}</p>
                            <p><strong>Height:</strong> {{this.height}} ft</p>
                            <p><strong>Cycle:</strong> {{this.cycle}}</p>
                            <p><strong>Hardiness:</strong> {{this.hardiness}}</p>
                            <p><strong>Watering:</strong> {{this.watering}}</p>
                            <p><strong>Sunlight:</strong> {{this.sunlight}}</p>
                            <p><strong>Flowers:</strong> {{this.flowers}}</p>
                            <p><strong>Edible:</strong> {{this.edible}}</p>
                        </div>
                        <button class="btn btn-sm btn-error">Remove</button>
                    </li>
                    {{/each}}
                </ul>
                <form action="/search">
                    <button type="submit" class="btn btn-primary mt-4 w-full">Add New Plant</button>
                </form>
            </div>
        </div>
    </div>

