<div class="container w-screen max-w-full max-h-full flex-none place-content-center p-10">
  <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-4 text-center text-gray-800">Plant Search</h1>
    <form action="/searchResults">
    <!-- Plant Name Search -->
    <div class="form-control mb-4">
      <label class="label" for="plantName">
        <span class="label-text text-gray-700">Plant Name</span>
      </label>
      <input type="text" id="plantName" class="input input-bordered" placeholder="Enter plant name" />
    </div>

    <h3 class="text-xl font-semibold mb-4 text-gray-700">Filters</h3>

    <!-- Height Filter (Range) -->
    <div class="form-control mb-4">
      <label class="label">
        <span class="label-text text-gray-700">Height (ft)</span>
      </label>
      <div class="flex gap-2">
        <input type="number" id="sizeMin" class="input input-bordered w-1/2" placeholder="Min" step="0.5" />
        <input type="number" id="sizeMax" class="input input-bordered w-1/2" placeholder="Max" step="0.5" />
      </div>
    </div>

    <!-- Cycle Filter -->
    <div class="form-control mb-4">
      <label class="label" for="cycle">
        <span class="label-text text-gray-700">Cycle</span>
      </label>
      <select id="moistureNeed" class="select select-bordered">
        <option value="">Any</option>
        <option value="Annual">Annual</option>
        <option value="Perennial">Perennial</option>
      </select>
    </div>

    <!-- Hardiness Filter (Range) -->
    <div class="form-control mb-4">
      <label class="label">
        <span class="label-text text-gray-700">Hardiness</span>
      </label>
      <div class="flex gap-2">
        <input type="number" id="minHardiness" class="input input-bordered w-1/2" placeholder="Min" />
        <input type="number" id="maxHardiness" class="input input-bordered w-1/2" placeholder="Max" />
      </div>
    </div>

    <!-- Sunlight Level Filter -->
    <div class="form-control mb-4">
      <label class="label" for="sunlight">
        <span class="label-text text-gray-700">Sunlight</span>
      </label>
      <select id="sunlight" class="select select-bordered">
        <option value="">Any</option>
        <option value="Full Shade">Full Shade</option>
        <option value="Part Shade">Part Shade</option>
        <option value="Full Sun">Full Sun</option>
      </select>
    </div>

    <!-- Watering Filter -->
    <div class="form-control mb-4">
      <label class="label" for="watering">
        <span class="label-text text-gray-700">Watering</span>
      </label>
      <select id="watering" class="select select-bordered">
        <option value="">Any</option>
        <option value="Minimum">Minimum</option>
        <option value="Average">Average</option>
        <option value="Frequent">Frequent</option>
      </select>
    </div>

    <!-- Flowers Filter -->
    <div class="form-control mb-4">
      <label class="label" for="flowers">
        <span class="label-text text-gray-700">Flowers</span>
      </label>
      <select id="flowers" class="select select-bordered">
        <option value="">Any</option>
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </div>

    <!-- Edible Filter -->
    <div class="form-control mb-4">
      <label class="label" for="edible">
        <span class="label-text text-gray-700">Edible</span>
      </label>
      <select id="edible" class="select select-bordered">
        <option value="">Any</option>
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </div>

    <!-- Search Button -->
    <div class="form-control mt-4">
      <button type="submit" class="w-full btn text-gray-900 bg-light-green">Search</button>
    </div>
  </form>
    <!-- Results Section -->
    <!--div id="results" class="mt-6"></div-->
  </div>
</div>
