<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/daisyui@2.14.0/dist/full.js"></script>
</head>
<body class="bg-base-200">

<div class="container mx-auto p-6 bg-base-100 shadow-xl rounded-lg space-y-6">
    <!-- Weather/Climate Information -->
    <div class="card bg-base-100 shadow-lg p-4">
        <h2 class="card-title text-xl">Weather/Climate</h2>
        <p><strong>Current Location:</strong> {{user.location}}</p>
        <p><strong>Current Weather:</strong> {{user.weather}}</p>
    </div>

    <!-- Plants Currently Being Grown -->
    <div class="card bg-base-100 shadow-lg p-4">
        <h2 class="card-title text-xl">Plants Currently Being Grown</h2>
        <ul class="list-disc pl-5 space-y-2">
            {{#each user.currentPlants}}
            <li class="flex justify-between items-center">
                {{this}}
                <button class="btn btn-sm btn-error">Remove</button>
            </li>
            {{/each}}
        </ul>
        <button class="btn btn-primary mt-4">Add New Plant</button>
    </div>

    <!-- Your Garden (View/Remove Plant) -->
    <div class="card bg-base-100 shadow-lg p-4">
        <h2 class="card-title text-xl">Your Garden</h2>
        <ul class="list-disc pl-5 space-y-2">
            {{#each user.garden}}
            <li class="flex justify-between items-center">
                {{this}}
                <button class="btn btn-sm btn-info">View</button>
            </li>
            {{/each}}
        </ul>
    </div>

    <!-- Favorite Plants -->
    <div class="card bg-base-100 shadow-lg p-4">
        <h2 class="card-title text-xl">Favorite Plants</h2>
        <ul class="list-disc pl-5 space-y-2">
            {{#each user.favoritePlants}}
            <li class="flex justify-between items-center">
                {{this}}
                <button class="btn btn-sm btn-error">Remove</button>
            </li>
            {{/each}}
        </ul>
    </div>

    <!-- Username/Password Settings -->
    <div class="card bg-base-100 shadow-lg p-4">
        <h2 class="card-title text-xl">Account Settings</h2>
        <div class="form-control w-full mb-4">
            <label class="label" for="username">Username</label>
            <input type="text" id="username" class="input input-bordered w-full" value="{{user.username}}">
        </div>
        <div class="form-control w-full mb-4">
            <label class="label" for="password">Password</label>
            <input type="password" id="password" class="input input-bordered w-full" value="{{user.password}}">
        </div>
        <button class="btn btn-primary">Update Account</button>
    </div>

    <!-- Delete Account -->
    <div class="card bg-base-100 shadow-lg p-4">
        <button class="btn btn-error w-full">Delete Account</button>
    </div>
</div>

</body>
</html>
