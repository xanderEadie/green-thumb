<div id="profile-container" class="container w-screen max-w-full flex-none place-content-center">
    <div class="container mx-auto m-10">
        <div class="container mx-auto">
            <h1 id="profile-title" class="text-center">Profile Settings</h1>
            <p id="profile-title-caption" class="text-center">Manage Your Account and Garden</p>
        </div>

        <div id="profile-cards-container" class="grid lg:grid-cols-3">
            <!-- User Information -->
            <div id="user-info-card" class="card bg-base-300 flex-1 m-10">
                <div class="card-body">
                    <h2 class="card-title">User Information</h2>
                    <p><strong>Name:</strong> {{user.name}}</p>
                    <p><strong>Username:</strong> {{user.username}}</p>
                    <p><strong>Email:</strong> {{user.email}}</p>
                </div>
            </div>

            <!-- My Garden -->
            <div id="my-garden-card" class="card bg-base-300 flex-1 m-10">
                <div class="card-body">
                    <h2 class="card-title">My Garden</h2>
                    <p class="card-text pb-4">Track plants in your garden</p>
                    {{#if userPlants.length}}
                        <ul class="space-y-4">
                            {{#each userPlants}}
                                <li class="flex items-center space-x-4">
                                    <img src="{{this.image_url}}" alt="{{this.name}}" class="w-12 h-12 rounded-md object-cover">
                                    <div>
                                        <p><strong>Name:</strong> {{this.name}}</p>
                                        <p><strong>Moisture Need:</strong> {{this.moistureNeed}}%</p>
                                        <p><strong>Comfort Temperature:</strong> {{this.comfTemp}} Â°C</p>
                                        <p><strong>Light Level:</strong> {{this.lightLevel}}</p>
                                        <p><strong>Lifespan:</strong> {{this.lifespan}} days</p>
                                        <p><strong>Size:</strong> {{this.SIZE}} cm</p>
                                        <p><strong>Rain Requirement:</strong> {{this.rainReq}} mm</p>
                                    </div>
                                    <button class="btn btn-sm btn-error">Remove</button>
                                </li>
                            {{/each}}
                        </ul>
                    {{else}}
                        <p>No plants in your garden yet. <a href="/plantSearch" class="text-primary">Add plants here.</a></p>
                    {{/if}}
                </div>
            </div>

            <!-- Favorite Plants -->
            <div id="favorite-plants-card" class="card bg-base-300 flex-1 m-10">
                <div class="card-body">
                    <h2 class="card-title">Favorite Plants</h2>
                    {{#if favoritePlants.length}}
                        <ul class="space-y-2">
                            {{#each favoritePlants}}
                                <li class="flex items-center space-x-4">
                                    <img src="{{this.image_url}}" alt="{{this.name}}" class="w-12 h-12 rounded-md object-cover">
                                    <div>{{this.name}}</div>
                                    <button class="btn btn-sm btn-error">Remove</button>
                                </li>
                            {{/each}}
                        </ul>
                    {{else}}
                        <p>No favorite plants added yet.</p>
                    {{/if}}
                </div>
            </div>

        </div>

        <!-- Account Settings Section -->
        <div id="account-settings" class="container mx-auto mt-10">
            <div class="card bg-base-300 shadow-lg p-6">
                <h2 class="card-title text-xl mb-4">Account Settings</h2>
                <div class="form-control w-full mb-4">
                    <label class="label" for="username">Username</label>
                    <input type="text" id="username" class="input input-bordered w-full" value="{{user.username}}">
                </div>
                <div class="form-control w-full mb-4">
                    <label class="label" for="email">Email</label>
                    <input type="email" id="email" class="input input-bordered w-full" value="{{user.email}}">
                </div>
                <button class="btn btn-primary">Update Account</button>
            </div>

            <!-- Delete Account Section -->
            <div class="card bg-base-300 shadow-lg p-6 mt-4">
                <button class="btn btn-error w-full">Delete Account</button>
            </div>
        </div>
    </div>
</div>
