        <p class="text-center text-gray-700 font-medium">{{this.common_name}}</p>
      </div>
      <div class="card bg-white rounded-lg shadow-md p-4 hover:shadow-lg">
        <img class="w-16 h-16 mx-auto mb-2" src="{{this.img}}" alt="Plant photo">
        <p class="text-center text-gray-700 font-medium">{{this.common_name}}</p>
      </div>
      <div class="card bg-white rounded-lg shadow-md p-4 hover:shadow-lg">
