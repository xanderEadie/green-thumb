        <img class="w-16 h-16 mx-auto mb-2" src="{{this.img}}" alt="Plant photo">
        <p class="text-center text-gray-700 font-medium">{{this.common_name}}</p>
      </div>
      <!-- Repeat similar cards for other plants -->
    </div>

    <!-- Right Section: Sidebar with List of Plant Names -->
    <div class="bg-white w-60 rounded-lg shadow-lg p-4 overflow-y-auto">
      <h2 class="text-xl font-bold text-gray-800 mb-4">My Garden</h2>
      <ul class="space-y-3">
        <li class="flex items-center justify-between bg-purple-100 p-3 rounded-lg hover:bg-purple-200">
          <span class="text-gray-800 font-medium">{{this.common_name}}</span>
          <button class="btn btn-ghost btn-xs text-lg text-gray-600 hover:text-red-500" onclick="toggleFavorite('{{this.common_name}}', this)">&#9825;</button>
        </li>
        <li class="flex items-center justify-between bg-purple-100 p-3 rounded-lg hover:bg-purple-200">
          <span class="text-gray-800 font-medium">{{this.common_name}}</span>
          <button class="btn btn-ghost btn-xs text-lg text-gray-600 hover:text-red-500" onclick="toggleFavorite('{{this.common_name}}', this)">&#9825;</button>
        </li>
        <li class="flex items-center justify-between bg-purple-100 p-3 rounded-lg hover:bg-purple-200">
          <span class="text-gray-800 font-medium">{{this.common_name}}</span>
          <button class="btn btn-ghost btn-xs text-lg text-gray-600 hover:text-red-500" onclick="toggleFavorite('{{this.common_name}}', this)">&#9825;</button>
        </li>
        <!-- Repeat for other plants -->
      </ul>
    </div>
  </div>

  <script>
    // JavaScript for managing favorites
    let favoritePlants = [];

    function toggleFavorite(plantName, buttonElement) {
      const index = favoritePlants.indexOf(plantName);

      if (index === -1) {
        // Add to favorites
        favoritePlants.push(plantName);
        buttonElement.innerHTML = '&#9829;'; // Filled heart
        buttonElement.classList.add('text-red-500');
      } else {
        // Remove from favorites
        favoritePlants.splice(index, 1);
        buttonElement.innerHTML = '&#9825;'; // Empty heart
        buttonElement.classList.remove('text-red-500');
      }
    }
  </script>
