<div id="garden" class="container h-full w-full min-h-screen min-w-screen flex-none p-5 mx-auto pb-5">
  <h1 class="green-sub-title ">Garden</h1>
  <!-- Garden Menu -->
  <div class="drawer drawer-end z-50 mb-5">
    <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
    {{#if plants}}
      <div class="drawer-content">
        <!-- Page content -->
        <label for="my-drawer-4" class="drawer-button btn btn-primary bg-light-green border-none"> 
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="black" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
          <h1 class="text-gray-900">Garden Menu</h1>
        </label>
      </div>
    {{else}}
      <div class="text-xl font-bold text-gray-200 min-h-screen">
      No plants in your garden!
      </div>
    {{/if}}
    <div class="drawer-side">
      <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
      <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-5">
        <!-- Sidebar content here -->
        {{#each plants}}
          <div class="card m-1 bg-base-300 rounded-lg flex justify-between">
            
            <div class="card-actions justify-between items-center m-1">
              <a class="btn flex-grow" href="/plantInformation?plant_id={{this.plant_id}}">
                  {{this.common_name}}
              </a>
              <form action="/removePlant" method="GET">
                <input type="hidden" name="plant_id" value="{{this.plant_id}}">
                <button type="submit" class="btn btn-circle bg-base-300 border-none">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                  </svg>
                  
                </button>
              </form>
            </div>
          </div>
        {{/each}}
      </ul>
    </div>
  </div>

  <!-- Garden Card Grid -->
  <div class="grid md:grid-cols-{{col}} place-content-center mx-auto w-full gap-10 max-w-screen">
    {{#each plants}}
      <div class="flex flex-col h-full bg-base-300 rounded-xl">
        <figure class="flex-grow">
          <a href="/plantInformation?plant_id={{this.plant_id}}">
            <img class="object-cover w-full h-full max-w-full max-h-50 rounded-t-xl" src="{{this.img}}" />
          </a>
        </figure>
        <div class="card-body">
          <h2 class="card-title">{{this.common_name}}</h2>
        </div>
      </div>

      <!-- ORIGINAL VERSION -->
      {{!-- <div class="card card-compact h-full bg-base-300 w-50 shadow-l m-5">
        <figure>
            <a href="/plantInformation?plant_id={{this.plant_id}}">
                <img class="object-cover w-full flex-grow" src="{{this.img}}"/>
            </a>
        </figure>
        <div class="card-body">
            <h2 class="card-title">{{this.common_name}}</h2>
        </div>
      </div>  --}}
    {{/each}}
  </div>
</div>
